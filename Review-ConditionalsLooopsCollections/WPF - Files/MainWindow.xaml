<Window x:Class="WPF___Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF___Files"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Select a File:" HorizontalAlignment="Left" Margin="35,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Height="90" Margin="115,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" IsEnabled="False"/>
        <Button x:Name="btnSelectFile" Content="Select File" HorizontalAlignment="Left" Margin="397,60,0,0" VerticalAlignment="Top" Width="93" Height="38" Click="BtnSelectFile_Click"/>
        <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="10,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="197" Width="772"/>
        <Button x:Name="btnReadFile" Content="Read File" HorizontalAlignment="Left" Margin="167,155,0,0" VerticalAlignment="Top" Width="95" Height="48" Click="BtnReadFile_Click"/>

    </Grid>
</Window>
